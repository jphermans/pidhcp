# Pi Router Docker Environment Configuration
# Copy this file to .env and customize for your environment

# Timezone
TZ=UTC

# Backend Configuration
CONFIG_DIR=/config
STATE_DIR=/data

# Application Settings
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
LOG_LEVEL=INFO

# Network Settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8080
FRONTEND_PORT=80

# WiFi Interfaces
WLAN0_INTERFACE=wlan0
WLAN1_INTERFACE=wlan1

# Default WiFi Configuration (AP)
AP_SSID=PiRouter-AP
AP_PASSWORD=SecurePass123
AP_CHANNEL=6
AP_COUNTRY=US

# Default DHCP Configuration
DHCP_SUBNET=10.42.0.0
DHCP_NETMASK=255.255.255.0
DHCP_GATEWAY=10.42.0.1
DHCP_RANGE_START=10.42.0.50
DHCP_RANGE_END=10.42.0.200
DHCP_LEASE_TIME=12h

# DNS Servers
DNS_SERVERS=1.1.1.1,1.0.0.1

# Docker Compose Settings
COMPOSE_PROJECT_NAME=pi-router
COMPOSE_FILE=docker-compose.yml
